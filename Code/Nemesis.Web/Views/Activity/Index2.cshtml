
    @{
        ViewBag.Title = "Index";
    }

    <h2>Work activities</h2>

    <div id="accordion">
        @foreach (var item in ViewBag.Activities)
        {
            <h3>@item.Display</h3>
            <div>
                <p><b>Title:</b> @item.Title</p>
                <p><b>Descripton:</b> @item.Description</p>
                <p><b>Date:</b> @item.Date.ToLongDateString()</p>
                <p><b>ActualDuration:</b> @item.ActualDuration</p>
                <p><b>Done by:</b> @item.DoneBy.Display</p>
            </div>
        }
    </div>

    <a class="btn btn-default" id="modalCreate"><span class="glyphicon glyphicon-plus"></span></a>

    <div class="modal fade" id="createModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Create Activity</h4>
                </div>
                <div class="modal-body" id="contentModala">

                </div>
            </div>
        </div>
    </div>

    <script>
        $('#modalCreate').on('click', function (event) {
            $.ajax({
                url: '../Activity/CreateActivityPartial',
                type: 'GET',
                cache: false
            }).done(function (result) {
                $('#contentModala').html(result);
                $('#createModal').modal();
            })
        })
    </script>
