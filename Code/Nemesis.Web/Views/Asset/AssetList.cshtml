@model System.Collections.Generic.List<Nemesis.Web.Models.AssetViewModel>

@{
    ViewBag.Title = "AssetList";
}

<h2>AssetList</h2>

@Html.ActionLink("Create new asset", "CreateAsset", "Asset")
@Html.ActionLink("Create new asset attribute", "CreateAssetAttribute", "Asset")

<table class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Type</th>
			<th>Part number</th>
			<th>Team</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var asset in Model)
		{
			<tr>
				<td>@asset.Name</td>
				<td>@asset.Description</td>
				@if (asset.Type != null) {
					<td>@asset.Type.Name</td>
				}
				<td>@asset.PartNumber</td>
				@if (asset.Team != null) { 
					<td>@asset.Team.Name</td>
				}
			</tr>
		}
	</tbody>
</table>


