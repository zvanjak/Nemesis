@model System.Collections.Generic.List<Nemesis.Domain.Assets.AssetType>

@{
    ViewBag.Title = "AssetTypes";
}

<h2>AssetTypes</h2>

@Html.ActionLink("Create new asset type", "CreateAssetType", "Asset")

<table class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
			<th>Name</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var attr in Model)
		{
			<tr>
				<td>@attr.Name</td>
			</tr>
		}
	</tbody>
</table>

