@model Nemesis.Web.Models.Objective.WeekObjectiveViewModel

@using (Html.BeginForm("CreateWeekObjective", "Objective", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="form-group">
            @Html.Label("Number of week in year", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.WeekOrdNum, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.WeekOrdNum, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Parent", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.ParentId, Model.ParentObjectives, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Title, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Description, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Description, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Priority, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.Priority, Model.Priorities, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Priority, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Assigned Team Members", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.TeamMembersId, Model.TeamMembers, new { @class = "form-control", multiple = "multiple" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Duration", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.EstimatedTime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.EstimatedTime, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

    </fieldset>
}
