@model Nemesis.Web.Models.TeamSpaceViewModel 
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create team space</h2>

@using (Html.BeginForm("CreateTeamSpace", "TeamSpace", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form", @id = "wo-form" }))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="form-group">
            @Html.LabelFor(x => x.Name, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Host, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Host, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Host)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </fieldset>
}

